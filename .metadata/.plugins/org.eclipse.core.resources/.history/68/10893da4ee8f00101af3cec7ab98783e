
class OuterClass {
int x = 10;

          class MiddleClass {
                  int y = 5;
                  
                class InnerClass {
                           int z = 1;
             }
          }
}

class Nested_Innerclass {
       public static void main(String[] args) {
              OuterClass Out1 = new OuterClass();
              OuterClass.MiddleClass Mid1 = new OuterClass().new MiddleClass();
             OuterClass.MiddleClass.InnerClass In1 = new OuterClass().new MiddleClass().new InnerClass();
                 System.out.println(In1.z + Mid1.y + Out1.x); // Outputs 16
      }
}



//In Java, it is also possible to nest classes (a class within a class).